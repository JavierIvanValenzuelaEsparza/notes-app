<div class="row">
  <%= form_for :filters, html: { class: 'input-field col s12' }, method: 'get' do |f| %>
    <%= material_icon.search.css_class('prefix') %>
    <%= f.text_field :title, autofocus: true, placeholder: 'Buscar por tÃ­tulo', value: params.dig(:filters, :title) %>
  <% end %>
</div>

<div class="row">
  <% @notes.each do |note| %>
    <%= link_to note_path(note) do %>
      <div class="col s12">
        <div class="card">
          <div class="card-content">
            <span class="card-title black-text">
              <%= note.title %>
              <span class="right" style="font-size: 0.75em; color: grey;">
                <%= format_as_localtime(note.created_at) %>
              </span>
            </span>
            <p style="white-space: pre-line; margin-top: 2px; color: black;">
              <%= truncate(note.body, length: 100) %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<div class="fixed-action-btn">
  <%= link_to new_note_path, title: 'New note', class: 'btn-floating btn-large pulse', style: 'background-color: #e53935;' do %>
    <%= material_icon.add %>
  <% end %>
</div>

