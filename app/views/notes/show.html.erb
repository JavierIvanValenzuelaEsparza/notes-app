<% if notice.present? %>
  <p id="notice" class="card-panel green lighten-4 green-text text-darken-4"><%= notice %></p>
<% end %>

<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-content">
        <span class="card-title">
          <%= @note.title %>
          <span class="right" style="font-size: 0.75em; color: grey;">
            <%= format_as_localtime @note.created_at %>
          </span>
        </span>
        <p style="white-space: pre-line; margin-top: 20px;"><%= @note.body %></p>
      </div>
      <div class="card-action">
        <%= link_to @note, title: 'Delete', method: :delete, data: { confirm: 'Are you sure?' }, class: 'red-text text-darken-2' do %>
          <i class="material-icons left">delete</i> Delete
        <% end %>

        <%= link_to edit_note_path(@note), title: 'Edit', class: 'blue-text text-darken-2 right' do %>
          <i class="material-icons left">mode_edit</i> Edit
        <% end %>
      </div>
    </div>
  </div>
</div>
